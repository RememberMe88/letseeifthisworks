<body>

    <h1>Your Quick Brain Note Template</h1>

    <form id="noteForm">
        <div class="section">
            <h2><i style="color: #e67e22;"></i> Problem & Resolution</h2>
            <div class="form-group">
                <label for="category">Category:</label>
                <select id="category" name="category">
                    <option value="">Select a category</option>
                    <option value="General Information">General Information</option>
                    <option value="troubleshooting">Troubleshooting</option>
                    <option value="investigation">Investigation</option>
                    <option value="internal_software_issues">Internal Software Issues</option>
                </select>
            </div>
            <div class="form-group">
                <label for="situation">Situation:</label>
                <textarea id="situation" name="situation"></textarea>
            </div>
            <div class="form-group">
                <label for="customerTroubleshooting">Troubleshooting the customer did:</label>
                <textarea id="customerTroubleshooting" name="customerTroubleshooting"></textarea>
            </div>
            <div class="form-group">
                <label for="actions">Actions Taken:</label>
                <textarea id="actions" name="actions"></textarea>
            </div>
            <div class="form-group">
                <label for="resolution">Resolution:</label>
                <textarea id="resolution" name="resolution"></textarea>
            </div>
        </div>

        <div class="section">
            <h2><i style="color: #e67e22;"></i> Status</h2>
            <div class="checkbox-group">
                <input type="checkbox" id="notResolved" name="notResolved">
                <label for="notResolved">Not Resolved</label>
            </div>
            <div class="checkbox-group">
                <input type="checkbox" id="resolved" name="resolved">
                <label for="resolved">Resolved</label>
            </div>
        </div>

        <div class="button-group">
            <button type="button" id="generateOutputBtn">Create Note Output</button>
            <button type="button" onclick="clearFormAndOutput()">Clear All</button>
        </div>
    </form>

    <div class="output-section">
        <h2>Your Formatted Note</h2>
        <textarea id="generatedOutput" readonly></textarea>
        <button type="button" class="copy-button" onclick="copyOutput()">Copy to Clipboard</button>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const generateOutputBtn = document.getElementById('generateOutputBtn');
            const generatedOutput = document.getElementById('generatedOutput');
            const noteForm = document.getElementById('noteForm');
            const notResolvedCheckbox = document.getElementById('notResolved');
            const resolvedCheckbox = document.getElementById('resolved');

            generateOutputBtn.addEventListener('click', function() {
                const category = noteForm.elements.category.value;
                const situation = noteForm.elements.situation.value;
                const customerTroubleshooting = noteForm.elements.customerTroubleshooting.value;
                const actions = noteForm.elements.actions.value;
                const resolution = noteForm.elements.resolution.value;

                let output = "";

                if (category) {
                    output += `Category: ${category}\n`;
                }
                if (situation) {
                    output += `Situation: ${situation}\n`;
                }
                if (customerTroubleshooting) {
                    output += `Customer Troubleshooting: ${customerTroubleshooting}\n`;
                }
                if (actions) {
                    output += `Actions Taken: ${actions}\n`;
                }
                if (resolution) {
                    output += `Resolution: ${resolution}\n`;
                }

                if (notResolvedCheckbox.checked) {
                    output += `Status: Not Resolved\n`;
                } else if (resolvedCheckbox.checked) {
                    output += `Status: Resolved\n`;
                }

                generatedOutput.value = output.trim();
            });
        });

        function copyOutput() {
            const textarea = document.getElementById("generatedOutput");
            textarea.select();
            document.execCommand("copy");
            alert("Note output copied to clipboard!");
        }

        function clearFormAndOutput() {
            document.getElementById("noteForm").reset();
            document.getElementById("generatedOutput").value = "";
        }
    </script>

</body>
</html>
